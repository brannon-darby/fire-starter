{
  "name": "fire-starter",
  "version": "1.0.0",
  "description": "Starter kit for the fireloop.io platform",
  "scripts": {
    "preinstall": "npm install -g @angular/cli",
    "install": "cd fireloop/ && npm install && cd ../webapp && npm install && npm install @angular/cli && cd ..",
    "postinstall": "npm run build",
    "build": "cd webapp/ && npm run build",
    "start": "npm run serve",
    "serve": "cd fireloop/ && node server/server.js",
    "contributor-add": "all-contributors add",
    "contributor-generate": "all-contributors generate"
  },
  "engines": {
    "node": "^7.0.0",
    "npm": "^4.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "all-contributors-cli": "^4.0.1"
  }
}
